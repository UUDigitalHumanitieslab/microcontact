<div class=panel-heading>
	<h2>{{>welcomeTitle}}</h2>
</div>
<div class=panel-body>
	<p>{{>welcomeLead}} <button class="btn btn-link" type=button data-toggle=collapse data-target=".welcome-more" aria-expanded=false>{{>welcomeShowMoreButton}}</button></p>
	{{>welcomeCollapsedText}}
	<p><em>{{>welcomeThankYou}}</em></p>
	<address>
		<i>{{>welcomeSignature}}</i><br>
		microcontact@uu.nl<br>
		<a href="https://microcontact.sites.uu.nl/" target=_blank>{{>welcomeLink}}</a>
	</address>
	<p>
		<a class="btn btn-primary btn-lg" href="#participate" role="button">{{>welcomeParticipateButton}}</a>
		<img
			src="static/image/erc_logo_113x64.png"
			height=64
			srcset="static/image/erc_logo_227x128.png 2x"
			alt="ERC logo"
			title="European Research Council"
			class=pull-right
		>
	</p>
</div>

