{{#place}}
<h2>{{name}}, {{countryName}}</h2>
<form>
	<div class=upload-status></div>
	<fieldset>
		<div class=form-group>
			<label for=upload-file class=control-label>i18n recordingLabel i18n fieldRequired</label>
			<input id=upload-file name=recording type=file class=form-control required>
		</div>
	</fieldset>
	<fieldset>
		<legend>i18n sociolinguisticLegend</legend>
		<div class=form-group>
			<label for=upload-dialect class=control-label>i18n dialectFieldLabel i18n fieldRequired</label>
			<select id=upload-dialect name=dialect class=form-control required>
				<option></option>
				{{#dialects}}<option value={{id}}>{{dialect}}</option>{{/dialects}}
			</select>
		</div>
		<div class=form-group>
			<label for=upload-languages class=control-label>i18n otherLanguagesFieldLabel i18n fieldRequired</label>
			<select multiple id=upload-languages name=languages class=form-control>
				{{#languages}}<option value={{id}}>{{language}}</option>{{/languages}}
			</select>
		</div>
		<div class=form-group>
			<label class=control-label>i18n countryFieldLabel</label>
			<p class=form-control-static>{{countryName}}</p>
			<label class=control-label>i18n placeFieldLabel</label>
			<p class=form-control-static>{{name}}</p>
			<input type=hidden name="place.placeID" value="{{placeID}}">
			<input type=hidden name="place.name" value="{{name}}">
			<input type=hidden name="place.country" value="{{country}}">
			<input type=hidden name="place.latitude" value="{{latitude}}">
			<input type=hidden name="place.longitude" value="{{longitude}}">
		</div>
		<div class=form-group>
			<label for=upload-age class=control-label>i18n ageFieldLabel i18n fieldRequired</label>
			<select id=upload-age name=age class=form-control required>
				<option></option>
				{{#ages}}<option value={{id}}>{{least}}&ndash;{{greatest}}</option>{{/ages}}
			</select>
		</div>
		<div class=form-group>
			<label for=upload-sex class=control-label>i18n sexFieldLabel i18n fieldRequired</label>
			<select id=upload-sex name=sex class=form-control required>
				<option></option>
				<option value=a>i18n sexFieldMale</option>
				<option value=b>i18n sexFieldFemale</option>
				<option value=c>i18n sexFieldOther</option>
			</select>
		</div>
		<div class=form-group>
			<label for=upload-education class=control-label>i18n educationFieldLabel i18n fieldRequired</label>
			<select id=upload-education name=education class=form-control required>
				<option></option>
				<option value=e>i18n educationFieldElementary</option>
				<option value=m>i18n educationFieldMiddle</option>
				<option value=h>i18n educationFieldHigh</option>
				<option value=u>i18n educationFieldUniversity</option>
			</select>
		</div>
		<fieldset id=upload-generation-field>
			<div class=radio>
				<label>
					<input type=radio name=generation value=a>
					i18n bornInItalyLabel
				</label><br>
				<label>
					<input type=radio name=generation value=b>
					i18n bornHereLabel
				</label>
			</div>
		</fieldset>
		<fieldset id=upload-firstgen-fields>
			<div class=form-group>
				<label for=upload-migrated class=control-label>i18n bornInYearLabel i18n fieldRequired</label>
				<input id=upload-migrated name=migrated type=number class=form-control placeholder=1960 min=1890 max=2021 step=1 spellcheck=false>
			</div>
			<div class=form-group>
				<label for=upload-origin-place class=control-label>i18n bornInVillageLabel i18n fieldRequired</label>
				<input id=upload-origin-place name=origin-place type=text class=form-control placeholder="i18n placeFieldPlaceholder" maxlength=200 spellcheck=false>
				<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
				<input type=hidden id=upload-origin name=origin>
			</div>
			<div class=form-group>
				<label for=upload-origin-province class=control-label>i18n bornInProvinceLabel i18n fieldRequired</label>
				<input id=upload-origin-province name=origin-province type=text class=form-control placeholder="i18n provincePlaceholder" maxlength=50 spellcheck=false>
				<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
			</div>
		</fieldset>
	</fieldset>
	<fieldset>
		<legend>i18n uploaderLegend</legend>
		<p class=text-success><strong>i18n uploaderPrivacyNote</strong></p>
		<div class=form-group>
			<label for=upload-name class=control-label>i18n nameFieldLabel i18n fieldRequired</label>
			<input id=upload-name name=name type=text class=form-control required autocomplete=name spellcheck=false placeholder="i18n namePlaceholder" maxlength=200>
			<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
		</div>
		<div class=form-group>
			<label for=upload-email class=control-label>i18n emailFieldLabel i18n atleastOneContactDetail</label>
			<input id=upload-email name=email type=email class="form-control upload-contact" autocomplete=email spellcheck=false placeholder="i18n emailPlaceholder" maxlength=254>
			<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
		</div>
		<div class=form-group>
			<label for=upload-phone class=control-label>i18n telephoneFieldLabel atleastOneContactDetail</label>
			<input id=upload-phone name=phone type=tel class="form-control upload-contact" autocomplete=tel placeholder="i18n telephonePlaceholder" maxlength=128 spellcheck=false>
			<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
		</div>
	</fieldset>
	<fieldset>
		<div class=checkbox>
			<label>
				<input type="checkbox" name="consent" required>
				i18n informedConsent
			</label>
		</div>
		<div class=form-group>
			<div class=upload-status></div>
			<button type=submit class="btn btn-primary" id=submit-button>i18n uploadButton</button>
		</div>
	</fieldset>
</form>
{{/place}}
