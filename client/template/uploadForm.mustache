{{#place}}
	<h2>{{name}}, {{countryName}}</h2>
	<form>
		<div class=form-group>
			<label for=upload-file class=control-label>La tua registrazione</label>
			<input id=upload-file type=file class=form-control>
		</div>
		<div class=form-group>
			<label for=upload-dialect class=control-label>Dialetto del paese di provenienza</label>
			<select id=upload-dialect class=form-control>
				{{#dialects}}<option value={{id}}>{{name}}</option>{{/dialects}}
			</select>
		</div>
		<div class=form-group>
			<label class=control-label>Nazione</label>
			<p class=form-control-static>{{countryName}}</p>
			<label class=control-label>Città</label>
			<p class=form-control-static>{{name}}</p>
		</div>
		<div class=form-group>
			Consenso informato (in costruzione)
		</div>
		<div class=form-group>
			<button type=submit class="btn btn-default">Invia</button>
		</div>
	</form>
{{/place}}{{^place}}
	<h2>Nessuna città qui</h2>
	<p>Può essere più facile trovare e cliccare la tua città ingrandendo la mappa con lo <a id=upload-zoom>zoom</a>.</p>
{{/place}}
